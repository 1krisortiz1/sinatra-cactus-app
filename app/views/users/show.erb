<h2><%= @user.name %>'s Discoveries</h2>

<% @user.cactus_entries.each do |t| %>
<ul>
  <li>
    <h3><a href="/cactus_entries/<%= t.id %>"><%= t.content %></a></h3>
    <strong>Discovery Location: </strong><%= t.location %></br>
    <strong>Flowers: </strong><%= t.color_flowers %></br>
    <strong>Water Conservation Method: </strong><%= t.water_conservation_method %>
    <h3><img src="<%= t.image %>" name="image" alt="" height="300" width="300"></h3>
  </li>
</ul><br>
<% end %><br>

